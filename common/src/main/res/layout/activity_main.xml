<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="80sp"
        android:text="title_string"
        android:textSize="48sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_TXT_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="@string/timer_default"
        android:textSize="68sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/main_ETXT_userTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/main_LLO_buttons"
        android:hint="Enter countdown time"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/main_LLO_buttons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:orientation="horizontal"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_start"
            android:layout_weight="1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="Start"
            android:layout_marginBottom="80dp"
            app:icon="@drawable/caret_circle_right" />

        <com.google.android.material.button.MaterialButton
            android:layout_weight="1"
            android:id="@+id/main_BTN_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="pause"
            android:layout_marginBottom="80dp"
            app:icon="@drawable/pause_circle"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_stop"
            android:layout_weight="1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/stop_circle" />

    </LinearLayout>


</RelativeLayout>